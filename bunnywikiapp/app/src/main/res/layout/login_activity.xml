<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bunnywiki_app.LoginActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_headerUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gebruikers"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toTopOf="@id/text_username"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toTopOf="@id/text_headerPassword"
        app:layout_constraintTop_toBottomOf="@id/text_headerUsername"
        />

    <TextView
        android:id="@+id/text_headerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wachtwoord"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_username"
        app:layout_constraintBottom_toTopOf="@id/text_password"
        />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_headerPassword"
        app:layout_constraintBottom_toTopOf="@id/button_login"
        />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/text_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

